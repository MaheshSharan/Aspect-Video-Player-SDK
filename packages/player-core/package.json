{
    "name": "aspect-player-core",
    "version": "0.1.0",
    "description": "Headless video player core engine with HLS/DASH/MP4 support",
    "license": "MIT",
    "author": "Mahesh Sharan",
    "repository": {
        "type": "git",
        "url": "https://github.com/MaheshSharan/Aspect-Video-Player-SDK.git",
        "directory": "packages/player-core"
    },
    "keywords": [
        "video-player",
        "hls",
        "dash",
        "streaming",
        "media-player"
    ],
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext .ts",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "aspect-player-shared": "workspace:*"
    },
    "devDependencies": {
        "rimraf": "^5.0.5",
        "tsup": "^8.0.0",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    }
}