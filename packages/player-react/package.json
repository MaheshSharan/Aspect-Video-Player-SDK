{
    "name": "@aspect/player-react",
    "version": "0.1.0",
    "description": "React wrapper for stream player SDK",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext .ts,.tsx",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "@aspect/shared": "workspace:*",
        "@aspect/player-core": "workspace:*",
        "@aspect/player-sources": "workspace:*",
        "@aspect/player-ui": "workspace:*"
    },
    "peerDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rimraf": "^5.0.5",
        "tsup": "^8.0.0",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    }
}