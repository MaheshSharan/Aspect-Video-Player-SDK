{
    "name": "aspect-player-ui",
    "version": "0.2.1",
    "description": "Netflix-style UI controls for Aspect Video Player",
    "license": "MIT",
    "author": "Mahesh Sharan",
    "repository": {
        "type": "git",
        "url": "https://github.com/MaheshSharan/Aspect-Video-Player-SDK.git",
        "directory": "packages/player-ui"
    },
    "keywords": [
        "video-player",
        "ui-controls",
        "netflix-ui",
        "media-player"
    ],
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./styles.css": "./dist/styles.css"
    },
    "sideEffects": [
        "*.css"
    ],
    "files": [
        "dist"
    ],
    "scripts": {
        "prebuild": "node scripts/build-styles.js",
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext .ts",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "aspect-player-shared": "^0.1.5",
        "aspect-player-core": "^0.1.5"
    },
    "devDependencies": {
        "rimraf": "^5.0.5",
        "tsup": "^8.0.0",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    }
}